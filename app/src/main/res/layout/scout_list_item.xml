<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:id="@+id/scoutNameCard"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoutNameClickable"
            android:text="@string/placeholder_name"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/scoutNameRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scoutNameClickable"
            android:layout_marginTop="4dp"
            android:text="@string/placeholder_role"
            android:textStyle="italic"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

        <ImageView
            android:id="@+id/scoutImageInCard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/scoutNameRole"
            android:layout_marginTop="8dp"
            android:background="@color/green_200"
            android:src="@drawable/ic_scout" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>